<div class="hero d-flex justify-content-around align-items-center m-auto">

    <div class="justify-content-center ">
        <h1>Listings</h1>
    </div>
</div>


<main class="container">
  <%= button_to 'New Listing', new_listing_path, :method => "get", class:"btn btn-primary" %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th class="col-2">Price</th>
          <th>Details</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @listings.each do |listing| %>
          <tr>
            <td><%= listing.name %></td>
            <td><%= listing.artist_id %></td>
            <td><%= listing.price %></td>
            <td><%= listing.description %></td>
            <td><%= link_to 'Show', listing %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</main>



